<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="wowo_newsletter.model.contact.class">Wowo\Bundle\NewsletterBundle\Entity\Contact</parameter>
        <parameter key="wowo_newsletter.pheanstalk.address">127.0.0.1:11300</parameter>
        <parameter key="wowo_newsletter.queue">newsletter_tube</parameter>
        <parameter key="wowo_newsletter.placeholders.mapping"></parameter>
        <parameter key="wowo_newsletter.default.sender_name">Wojciech Sznapka</parameter>
        <parameter key="wowo_newsletter.default.sender_email">wojciech@sznapka.pl</parameter>
    </parameters>

    <services>
        <service id="wowo_newsletter.contact_manager" class="Wowo\Bundle\NewsletterBundle\Model\ContactManager">
            <argument type="service" id="wowo_newsletter.entity_manager" />
            <argument type="service" id="service_container" />
            <argument>%wowo_newsletter.model.contact.class%</argument>
        </service>

        <service id="wowo_newsletter.mailing_manager" class="Wowo\Bundle\NewsletterBundle\Model\MailingManager">
            <argument type="service" id="wowo_newsletter.entity_manager" />
            <argument type="service" id="service_container" />
            <argument>%wowo_newsletter.model.contact.class%</argument>
        </service>

        <service id="wowo_newsletter.newsletter_manager" class="Wowo\Bundle\NewsletterBundle\Newsletter\NewsletterManager">
            <call method="setEntityManager">
                <argument type="service" id="wowo_newsletter.entity_manager"/>
            </call>
            <call method="setPheanstalk">
                <argument type="service" id="wowo_newsletter.pheanstalk"/>
            </call>
            <call method="setMailer">
                <argument type="service" id="mailer"/>
            </call>
            <call method="setContactClass">
                <argument>%wowo_newsletter.model.contact.class%</argument>
            </call>
            <call method="setTube">
                <argument>%wowo_newsletter.queue%</argument>
            </call>
            <call method="setPlaceholders">
                <argument>%wowo_newsletter.placeholders.mapping%</argument>
            </call>
        </service>

        <service id="wowo_newsletter.empty_newsletter" class="Wowo\Bundle\NewsletterBundle\Model\Newsletter">
            <call method="setSenderNameProxy">
                <argument type="string">%wowo_newsletter.default.sender_name%</argument>
            </call>
            <call method="setSenderEmailProxy">
                <argument type="string">%wowo_newsletter.default.sender_email%</argument>
            </call>
        </service>

        <service id="wowo_newsletter.pheanstalk" class="Pheanstalk">
            <argument>%wowo_newsletter.pheanstalk.address%</argument>
        </service>

        <service id="wowo_newsletter.entity_manager" alias="doctrine.orm.entity_manager" />
    </services>
</container>
